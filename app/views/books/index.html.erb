<p id="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <span>
          <%= link_to "show", "/books/#{book.id}" %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to "edit", "/books/#{book.id}/edit" %>
        </span>
      </td>
      <td>
        <span>
          <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %>
        </span>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>本文</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>


